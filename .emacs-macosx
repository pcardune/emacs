(require 'django-html-mode)

;set some default modes for certain file types.
(add-to-list 'auto-mode-alist '("\\.\\(zcml\\|pt\\|lore\\)\\'" . nxml-mode))
(add-to-list 'auto-mode-alist '("\\.html\\'" . django-html-mode))
